{
    "name": "Bulk Image Downloader",
    "description": "",
    "version": "1.0",
    "manifest_version": 2,

    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },

    "content_scripts": [{
        "matches": ["<all_urls>", "https://www.google.com/search?q=*"],
        "js": ["content.js"]
    }],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "permissions": [
        "tabs",
        "storage",
        "https://www.google.com/search?q=*",
        "<all_urls>"
    ]
}